<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/master_gips_mobile</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="com/java/web/core/domain/access/Product2theme.hbm.xml"/>
    <mapping resource="com/java/web/core/domain/access/Menuitem.hbm.xml"/>
    <mapping resource="com/java/web/core/domain/access/DbVersion.hbm.xml"/>
    <mapping resource="com/java/web/core/domain/access/Customstyle.hbm.xml"/>
    <mapping resource="com/java/web/core/domain/access/Product2menuitem.hbm.xml"/>
    <mapping resource="com/java/web/core/domain/access/Theme.hbm.xml"/>
    <mapping resource="com/java/web/core/domain/access/Product.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
